#!/bin/bash

# Reattach to a screen or tmux session

session=$1

if [[ ! $session ]] ; then
    session=main
fi

ssh-agent-env-grab

(
    xtitle tmux@$HOSTNAME
    if tmux has-session -t $session ; then
        exec tmux -2 att -d -t $session
    fi


    if tmux has-session ; then
        exec tmux -2 att -d
    fi

    xtitle screen@$HOSTNAME
    screen -rd $session && exit
    screen -rd && exit

    xtitle "Terminal"

    exit 1

) && clear
